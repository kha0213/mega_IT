package pra;

public class Ex01_sosu {
	public static void main(String[] args) {
		Ex01_sosu ex = new Ex01_sosu();
		// a=97, z=122/ ' '=32 A=65 Z=90

		System.out.println(ex.solution(626331));
	}

	public int solution(int num) {
	    int answer=0;
		while(num!=1) {
			
			if(num%2==0) {
				num/=2;
			}else {
				num=(num*3)+1;
			}
			answer++;
			if(answer==500)
				return -1;
			
		}
	      return answer;
	  }

}
